{
    "name": "inspiredminds/contao-unified-news-aliases",
    "description": "Contao extension to allow to use the same news alias for different news articles of different languages.",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "homepage": "https://github.com/inspiredminds/contao-unified-news-aliases",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
	"support": {
		"issues": "https://github.com/inspiredminds/contao-unified-news-aliases/issues",
		"source": "https://github.com/inspiredminds/contao-unified-news-aliases"
	},
	"funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fritzmg"
        }
    ],
    "require": {
        "php": ">=8.2",
        "contao/core-bundle": "^5.3",
        "contao/news-bundle": "^5.3",
        "symfony/dependency-injection": "^6.4 || ^7.3",
        "symfony/event-dispatcher": "^6.4 || ^7.3",
        "symfony/http-kernel": "^6.4 || ^7.3",
        "terminal42/contao-changelanguage": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "InspiredMinds\\ContaoUnifiedNewsAliases\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "InspiredMinds\\ContaoUnifiedNewsAliases\\ContaoManager\\Plugin"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
